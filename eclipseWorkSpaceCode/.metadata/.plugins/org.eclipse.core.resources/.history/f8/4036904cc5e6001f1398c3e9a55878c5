package assignments;

public class ArrayAssignment1 {

	public static void main(String[] args) {
		// Write a Java program that checks whether a puja exists in an array of names {"rajan", "puja", "hema", "prakhar", "prachi"}

		String[] names = {"rajan", "puja", "hema", "prakhar", "prachi"};

				for(int i=0; i<names.length; i++) {
					if(names[i]=="puja") {
					System.out.println(names[i]+" exists in the names array at the index number "+i);
					return;
					}
				}		
		        System.out.println("Puja does not exist in the array.");

		 // For Each loop:
		        
		//        for (String var : names) {
		//        	if(var.equals("puja")) {
		//        		System.out.println("Puja is present in the array");
		//        		return;
		//        	}
		//		}
		//        System.out.println("Puja does not exist in the array.");
		
        
	}
}












