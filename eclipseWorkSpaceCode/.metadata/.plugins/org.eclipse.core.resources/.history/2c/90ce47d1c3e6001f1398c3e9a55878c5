//        		return;
//        	}
//		}
//        System.out.println("Puja does not exist in the array.");
        

        
        boolean found = false; // let's assume the value is not found in the array

        for (String name : names) {
            	if (name.equals("puja")) {
            		found = true; // updated the found status to True since condition is true
            	}
            	
            	
            	
            		
            	
            		
          
            	
        }

}

